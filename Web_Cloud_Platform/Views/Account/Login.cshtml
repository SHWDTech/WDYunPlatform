@using SHWDTech.Web_Cloud_Platform.Models
@model AccountLoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {role = "form"}))
{
    @Html.AntiForgeryToken()
    <div class="section-title">
        <h3>测试登录</h3>
    </div>
    <div class="">
        <div class="input-group">
            @Html.LabelFor(m => m.LoginName)
            @Html.TextBoxFor(m => m.LoginName, new {@class = "input-control"})
        </div>
        <div>
            @Html.ValidationSummary(null, new {@class = "text-danger"})
        </div>
    </div>
}