<Window x:Class="MisakaBanZai.Views.CreateTcpConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="创建TCP" Height="240" Width="400" FontSize="16" WindowStartupLocation="CenterScreen" 
        Icon="/MisakaBanZai;component/MisakaMisaka.ico" KeyDown="EnterHandler">
    <Grid>
        <Label Content="IP地址" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20, 35, 0, 0"></Label>
        <TextBox x:Name="IpAddressBox" Width="240" Height="35" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, 30, 30, 0" KeyDown="EnterHandler"></TextBox>
        <Label Content="端口" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20, 95, 0, 0"></Label>
        <TextBox x:Name="PortBox" Width="240" Height="35" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0, 90, 30, 0"  KeyDown="EnterHandler"></TextBox>
        <Button Content="确定" Height="35" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="60, 0, 0, 20" Click="ConfirmCreate"></Button>
        <Button Content="取消" Height="35" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0, 0, 60, 20" Click="Close"></Button>
    </Grid>
</Window>
