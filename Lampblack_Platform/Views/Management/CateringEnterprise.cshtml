@{
    Layout = null;
}

<div class="single-content">
    <div class="float-card float-card-default float-card-single scroll-y">
        <div class="panel">
            <div class="panel-body">
                <div class="control-layer horizontal-group">
                    <span class="span100" style="margin-left: 10px;">餐饮企业名称：</span>
                    <input type="text" class="form-control control240" id="queryName"/>
                    <input type="button" class="btn btn-main" value="查询" id="cateringEnterpriseQuery"/>
                    <input type="button" class="btn btn-main" value="新增" id="add"/>
                    <input type="button" class="btn btn-main" value="导出" id="export"/>
                </div>
                <div class="table-layer">
                    @{
                        var table = Html.BootstrapTable(null, TablePaginationOption.server, new
                        {
                            id = "cateringEnterprise_table",
                            data_page_size = 25,
                            data_reset_offset = true
                        });
                        var builder = table.Column("餐饮企业名称", "CompanyName")
                            .Column("企业编号", "CompanyCode")
                            .Column("负责人", "ChargeMan")
                            .Column("电话号码", "Telephone")
                            .Column("邮箱地址", "Email")
                            .Column("详细地址", "Address")
                            .Column("注册时间", "RegisterDateTime")
                            .Apply(ColumnOption.width, "100")
                            .Column("操作", "Operate")
                            .Apply(ColumnOption.width, "100")
                            .Apply(ColumnOption.formatter, "cateringEnterpriseFormatter")
                            .Apply(ColumnOption.events, "cateringEnterpriseEvents");
                    }
                    @(builder)
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("SlideUp")

<script src="/Scripts/Page/CateringEnterprise.js"></script>