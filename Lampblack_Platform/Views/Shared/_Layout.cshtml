@using MvcWebComponents.Model
@model ViewModelBase
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Html.MvcSiteMap().SiteMapTitle() - 餐饮油烟在线监控平台</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Css", false)
</head>
<body>
    <div class="navbar navbar-default topheadnav">
    </div>
    <div class="wapper">
        <div class="sidebar">
            <div class="main-menu">
                @Html.Partial("_menu", Model)
            </div>
        </div>
        <div class="body-content">
            <div class="nav-container">
                <span class="glyphicon glyphicon-home"></span>
                @Html.MvcSiteMap().SiteMapPath()
            </div>
            <div class="main-container">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="footer">
        <footer>
            <p>&copy; @DateTime.Now.Year - 餐饮油烟在线监控平台</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/layout")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Scripts/Utility/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
